<h1>日報の編集</h1>

<%= form_with model: @report, local: true do |f| %>
    <div>
      <%= f.label :title, "タイトル" %><br>
      <%= f.text_field :title, class: 'form-control', style: 'width: 100%' %>
    </div>

    <div>
      <%= f.label :body, "本文" %><br>
      <%= f.text_area :body, class: 'form-control', rows: 10, style: 'width: 100%' %>
    </div>

    <div style="margin-top: 1rem;">
      <%= f.submit "更新", class: "btn btn-primary" %>
      <%= link_to "一覧に戻る", reports_path, class: "btn btn-secondary", style: "margin-left: 10px;" %>
    </div>
<% end %>