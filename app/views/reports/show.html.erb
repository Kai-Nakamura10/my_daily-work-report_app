<div class="card">
    <div class="card-body">
      <h3 class="card-title"><%= @report.title %></h3>
      <p class="card-text"><%= simple_format(@report.body) %></p>
      <p class="card-text text-muted">
        作成日: <%= @report.created_at.strftime('%Y/%m/%d') %>
      </p>
      <%= link_to '編集', edit_report_path(@report), class: "btn btn-primary" %>
      <%= link_to '一覧に戻る', reports_path, class: "btn btn-secondary" %>
    </div>
</div>